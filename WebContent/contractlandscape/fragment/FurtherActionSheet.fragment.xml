<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <ActionSheet
    title="{i18n>FurtherActions}"
    showCancelButton="true"
    placement="Top">
    <buttons>
      <Button text="{i18n>GetSimulatedPrices}" tooltip="{i18n>GetSimulatedPrices}" icon="sap-icon://simple-payment" press="handleGetSimulatedPrices" />    
      <Button text="{i18n>SendFOCItems}" tooltip="{i18n>SendFOCItems}" icon="sap-icon://sales-order-item" press="handleSendFOCItems" />
      <Button text="{i18n>DownloadToExcel}" tooltip="{i18n>DownloadToExcel}" icon="sap-icon://download" press="handleDownloadToExcel" />
      <Button id="idFlagDeflag" text="{Property>/FlagButtonText}" tooltip="{Property>/FlagButtonTooltip}" icon="{Property>/FlagButtonIcon}" press="handleFlag" />
    </buttons>
  </ActionSheet>
</core:FragmentDefinition>