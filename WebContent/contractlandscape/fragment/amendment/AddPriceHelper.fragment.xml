<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:layout="sap.ui.commons.layout">

	<Dialog title="{i18n>SelectProduct}" class="sapUiPopupWithPadding"
		stretchOnPhone="true">
		
		<content>
			<Bar design="Header">
				<contentMiddle>
					<layout:MatrixLayout id="idMatrixLayout"
						layoutFixed="false">
						<layout:MatrixLayoutRow>
							<layout:MatrixLayoutCell padding="None"
								vAlign="Middle" hAlign="Right" rowSpan="1" colSpan="1">
								<Label text="{i18n>MaterialNo} " />
							</layout:MatrixLayoutCell>
							<layout:MatrixLayoutCell vAlign="Middle"
								hAlign="Center" rowSpan="1" colSpan="1">
								<Input type="Text" placeholder="" />
							</layout:MatrixLayoutCell>
							<layout:MatrixLayoutCell vAlign="Middle"
								hAlign="Left" rowSpan="1" colSpan="1">
								<Label text="{i18n>MaterialDescription} " />
							</layout:MatrixLayoutCell>
							<layout:MatrixLayoutCell vAlign="Middle"
								hAlign="Left" rowSpan="1" colSpan="1">
								<Input type="Text" placeholder="" />
							</layout:MatrixLayoutCell>
							<layout:MatrixLayoutCell vAlign="Middle"
								hAlign="Left" rowSpan="1" colSpan="1">
								<Button icon="sap-icon://sys-find" />
							</layout:MatrixLayoutCell>
						</layout:MatrixLayoutRow>
					</layout:MatrixLayout>
				</contentMiddle>
			</Bar>
			<Table>
				<ColumnListItem>
					<cells>
						<Text text="" />
						<Text text="" />
						<Text text="" />
						<Text text="" />
					</cells>
				</ColumnListItem>
				<columns>
					<Column >
						<header>
							<Text text="{i18n>MaterialNo}" />
						</header>
					</Column>
					<Column >
						<header>
							<Text text="{i18n>MaterialDescription}" />
						</header>
					</Column>
					<Column >
						<header>
							<Text text="{i18n>UOM}" />
						</header>
					</Column>
					<Column >
						<header>
							<Text text="{i18n>NoOfTests}" />
						</header>
					</Column>
				</columns>
			</Table>
		</content>

		<beginButton>
			<Button icon="sap-icon://decline" press="handleProductSelectDialogClosePress" />
		</beginButton>
	</Dialog>	
</core:FragmentDefinition>