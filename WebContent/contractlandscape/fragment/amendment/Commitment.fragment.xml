<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:commons="sap.ui.commons">

	<Dialog title="{i18n>AddChangeCommitment}" class="sapUiPopupWithPadding"
		contentWidth="50%" contentHeight="50%" stretchOnPhone="true">

		<customHeader>
			<Bar>
				<contentLeft>
					<core:Icon src="sap-icon://edit" />
				</contentLeft>
				<contentMiddle>
					<Label text="{Property>/AmendCommitmentTitle}" />
				</contentMiddle>
			</Bar>
		</customHeader>


		<l:Grid defaultSpan="L12 M12 S12" width="auto">

			<l:content>

				<f:SimpleForm layout="ResponsiveGridLayout" labelSpanL="4"
					labelSpanM="3" emptySpanL="1" emptySpanM="1" columnsL="1" columnsM="1">

					<f:content>

						<Label text="{i18n>Customer}" />
						<Input id="idCAPartner"
							value="{DealDetailModel>/SelectedCommitmentItem/CallOffPartner}"
							enabled="{Property>/MaterialEnable}"
							showValueHelp="true" valueHelpRequest="handleCustomerValueHelp">
							<layoutData>
								<l:GridData span="L2 M3 S4" />
							</layoutData>
						</Input>

						<Input id="idCAPartnerName"
							value="{DealDetailModel>/SelectedCommitmentItem/PartnerName}"
							enabled="false">

							<layoutData>
								<l:GridData span="L4 M6 S9" />
							</layoutData>

						</Input>

						<Label text="{i18n>Product}" />
						<Input id="idCAProduct"
							value="{DealDetailModel>/SelectedCommitmentItem/Material}"
							enabled="{Property>/MaterialEnable}" 
							showValueHelp="true" valueHelpRequest="handleMaterialValueHelp">

							<layoutData>
								<l:GridData span="L2 M3 S4" />
							</layoutData>

						</Input>

						<Input id="idCAProductDesc"
							value="{DealDetailModel>/SelectedCommitmentItem/MaterialDescription}"
							enabled="false">

							<layoutData>
								<l:GridData span="L4 M6 S9" />
							</layoutData>

						</Input>

						<Label text="{i18n>Qty}" />

						<Input id="idCAQty" type="Number"
							value="{DealDetailModel>/SelectedCommitmentItem/Quantity}">

							<layoutData>
								<l:GridData span="L4 M4 S6" />
							</layoutData>

						</Input>

						<Input id="idCAUOM" value="{DealDetailModel>/SelectedCommitmentItem/Uom}"
							enabled="false">
							<layoutData>
								<l:GridData span="L2 M2 S3" />
							</layoutData>
						</Input>

						<!-- <Label text="{i18n>NewQty}" /> <Input id="idCANewQuantity" value="" 
							> <layoutData> <l:GridData span="L4 M4 S6" /> </layoutData> </Input> <Input 
							id="idCANewUOM" value="" placeholder="{i18n>UOM}"> <layoutData> <l:GridData 
							span="L2 M2 S3" /> </layoutData> </Input> -->

						<Label text="{i18n>ValidityDate}" />

						<DatePicker id="idCAValidFrom" displayFormat="{i18n>DateFormat}"
							enabled="{Property>/MaterialEnable}" dateValue="{DealDetailModel>/SelectedCommitmentItem/ValidFrom}">
							<layoutData>
								<l:GridData span="L4 M3 S7" />
							</layoutData>
						</DatePicker>

						<DatePicker id="idCAValidTo" displayFormat="{i18n>DateFormat}"
							dateValue="{DealDetailModel>/SelectedCommitmentItem/ValidTo}">
							<layoutData>
								<l:GridData span="L4 M3 S7" />
							</layoutData>
						</DatePicker>

					</f:content>
				</f:SimpleForm>

			</l:content>

		</l:Grid>


		<beginButton>
			<Button icon="sap-icon://save" press="handleAmendCommitmentPost" />
		</beginButton>

		<endButton>
			<Button icon="sap-icon://decline" press="handleAmendPopupClose" />
		</endButton>

	</Dialog>

</core:FragmentDefinition>