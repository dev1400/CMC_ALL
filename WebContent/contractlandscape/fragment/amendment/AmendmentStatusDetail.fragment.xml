		<l:Grid
		    defaultSpan="L12 M12 S12"
		    width="25rem">
		    <l:content>
		    
		      <f:SimpleForm 
		        minWidth="1024"
		        maxContainerCols="2"
		        editable="false"
		        layout="ResponsiveGridLayout"
		        labelSpanL="4"
		        labelSpanM="4"
		        labelSpanS="5"
		        emptySpanL="0"
		        emptySpanM="0"
		        columnsL="2"
		        columnsM="2">
		        
		        <f:content>
		        
		          <Label text="{i18n>Status}" />
		          <Text text="{	path: 'AmendmentDetail>/Status',
									formatter: 'dia.cmc.common.util.Formatter.amendmentStatus'
								}"/>
		        
		          <Label text="{i18n>RequestedBy}" />
		          <Text text="{AmendmentDetail>/ChangedByName}" width="10rem"/>

		          
		          <Label text="{i18n>RequestedFrom}" />
		          <Text text="{AmendmentDetail>/TriggerSystem}" />

		          
		          <Label text="{i18n>RequestedOn}" />
		          <Text text="{	path: 'AmendmentDetail>/ChangedOn',
									formatter: 'dia.cmc.common.util.Formatter.date'
								}" />
			
		          <Label text="{i18n>Description}" />
		          <Text text="{AmendmentDetail>/RequestDesc}" />

				  
		        </f:content>
		      
		      </f:SimpleForm>
		    </l:content>
		 </l:Grid>
		
