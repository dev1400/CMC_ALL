<core:View controllerName="dia.cmc.contractlandscape.view.Timeline"
	xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:suite="sap.suite.ui.commons" xmlns:html="http://www.w3.org/1999/xhtml">

	<Page id="idTimelinePage" class="sapUiFioriObjectPage"
		title="{DealDetailModel>/DealDetail/CustomerName} - Timeline"
		showNavButton="true" navButtonPress="handleTimelineNavButtonPress">



		<!-- <HBox> <Label text="{i18n>TimelinePeriod}" /> <DateRangeSelection 
			id="idTimelinePeriod" delimiter="{i18n>To}" from="" to="" displayFormat="{i18n>DateFormat}" 
			/> </HBox> -->

		<subHeader>
			<Bar>
				<contentMiddle>

					<Label text="{i18n>TimelinePeriod}" />

					<DateRangeSelection id="idTimelinePeriod"
						delimiter="{i18n>To}" from="" to="" displayFormat="{i18n>DateFormat}"
						width="17em"/>
						
					<Label text="{i18n>Amendments}" />
					<MultiComboBox id="idAmendCat" width="15em" placeholder="{i18n>AmendmentPlaceholder}">
						<!-- <core:Item key="" text="{i18n>All}" tooltip="{i18n>AllTooltip}" /> -->
						<core:Item key="RC" text="{i18n>RecalculationRequest}" tooltip="{i18n>RecalculationRequest}" />
						<core:Item key="VL" text="{i18n>ValidityAmend}" tooltip="{i18n>ValidityAmend}" />
						<core:Item key="PR" text="{i18n>PriceAmend}" tooltip="{i18n>PriceAmend}" />
						<core:Item key="PT" text="{i18n>PartnerAmend}" tooltip="{i18n>PartnerAmend}" />
					</MultiComboBox>
						
					<Button icon="sap-icon://sys-find"
						tooltip="{i18n>SearchTimelineTooltip}" press="handleTimelineSearchPress" />
				</contentMiddle>

			</Bar>
		</subHeader>

		<content>

			<suite:Timeline showHeaderBar="false" sortOldestFirst="true"
				content="{		
								path: '/AmendmentCollection'					
							}">

				<suite:content>
				
					<suite:TimelineItem userName="{ChangedByName}"
						dateTime="{ChangedOn}" filterValue="{RequestType}" icon="sap-icon://task" 
						text="{RequestDesc}">

						<!-- <suite:embeddedControl> </suite:embeddedControl> -->

					</suite:TimelineItem>

				</suite:content>
			</suite:Timeline>
		
			<!-- <Table id="idTimelineTable" width="100%" backgroundDesign="Transparent"
				showSeparators="None"
				items="{  
							path: '/AmendmentCollection'					
							}">

				<columns>
					<Column hAlign="Left" width="3em" />

					<Column demandPopin="true" hAlign="Left" />

					<Column demandPopin="true" hAlign="Left" />
				</columns>

				<ColumnListItem>

					<core:Icon src="sap-icon://expand-group" />

					<ObjectIdentifier title="{RequestDescr}" class="sapMTableContentMargin" />



				</ColumnListItem>
			</Table> -->

		</content>

		<footer>
			<Bar>

			</Bar>
		</footer>
		
		
	</Page>
</core:View>