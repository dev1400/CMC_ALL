<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
 		xmlns:layout="sap.ui.commons.layout"
		controllerName="dia.cmc.contractlandscape.view.ProductSearchHelp" 
		xmlns:html="http://www.w3.org/1999/xhtml">
		
	<Dialog id="idProductSelectDialog" title="{i18n>SelectProduct}" class="sapUiPopupWithPadding"
		contentWidth="60%" contentHeight="45%" stretchOnPhone="true">
		
		<content>
			<Bar >
				<contentMiddle>
				
<!-- 					<HBox align="JustifyContent">
						<Label text="{i18n>Product} " />
						<Input id="idMaterialNumber" type="Text" placeholder="" />
						
						<Label text="{i18n>Description} " />
						<Input id="idMaterialDescription" type="Text" placeholder="" />
						
						<Button icon="sap-icon://sys-find" tooltip="{i18n>MaterialSearch}" press="handleMaterialSearchButtonPress"/>
									
					</HBox> -->
					<layout:MatrixLayout id="idMatrixLayout"
						layoutFixed="false">
						<layout:MatrixLayoutRow>
							<layout:MatrixLayoutCell padding="None"
								vAlign="Middle" hAlign="Right" rowSpan="1" colSpan="1">
								<Label text="{i18n>MaterialNo} " />
							</layout:MatrixLayoutCell>
							<layout:MatrixLayoutCell vAlign="Middle"
								hAlign="Center" rowSpan="1" colSpan="1">
								<Input id="idMaterialNumber" type="Text" placeholder="" />
							</layout:MatrixLayoutCell>
							<layout:MatrixLayoutCell vAlign="Middle"
								hAlign="Left" rowSpan="1" colSpan="1">
								<Label text="{i18n>MaterialDescription} " />
							</layout:MatrixLayoutCell>
							<layout:MatrixLayoutCell vAlign="Middle"
								hAlign="Left" rowSpan="1" colSpan="1">
								<Input id="idMaterialDescription" type="Text" placeholder="" />
							</layout:MatrixLayoutCell>
							<layout:MatrixLayoutCell vAlign="Middle"
								hAlign="Left" rowSpan="1" colSpan="1">
								<Button icon="sap-icon://sys-find" tooltip="{i18n>MaterialSearch}" press="handleMaterialSearchButtonPress"/>
							</layout:MatrixLayoutCell>
						</layout:MatrixLayoutRow>
					</layout:MatrixLayout>
				</contentMiddle>
			</Bar>
			<Table id="idProductSearchTable" fixedLayout="true" mode="SingleSelectMaster"
			selectionChange="handleTableRowSelect" items="{ODataModel>/MaterialCollection}">
				<ColumnListItem type="Active">
					<cells>
						<Text text="{ODataModel>MaterialNo}" />
						<Text text="{ODataModel>MaterialDesc}" />
						<Text text="{ODataModel>Uom}" />
						<!-- <Text text="{ODataModel>NoOfTests}" /> -->
					</cells>
				</ColumnListItem>
				<columns>
					<Column >
						<header>
							<Text text="{i18n>MaterialNo}" />
						</header>
					</Column>
					<Column >
						<header>
							<Text text="{i18n>MaterialDescription}" />
						</header>
					</Column>
					<Column >
						<header>
							<Text text="{i18n>UOM}" />
						</header>
					</Column>
					<!-- <Column >
						<header>
							<Text text="{i18n>NoOfTests}" />
						</header>
					</Column> -->
				</columns>
			</Table>
		</content>

		<beginButton>
			<Button icon="sap-icon://decline" tooltip="{i18n>Cancel}" press="handleProductSelectDialogClosePress" />
		</beginButton>
	</Dialog>	
	
	<!-- <Page title="Title">
		<content>
	
		</content>
	</Page> -->
</core:View>