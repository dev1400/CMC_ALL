<core:View controllerName="dia.cmc.contractlandscape.view.detail.Document"
	xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml">

	<List id="AttachmentList" items="{DealDetailModel>/DocumentCollection}"
		headerText="Contract Documents">
		
		<items>
		
			<StandardListItem
				title="{DealDetailModel>DocumentTitle}, {path: 'DealDetailModel>DocumentSize'}"
				description="{DealDetailModel>DocumentDescription}" icon="sap-icon://document"
				type="Active" iconDensityAware="false"
				info="{		
										path: 'DealDetailModel>DocumentDate',
										formatter: 'dia.cmc.common.util.Formatter.date'
									}"
				infoState="Success" press="handleDocumentDisplay" />
		
		</items>
	</List>

</core:View>