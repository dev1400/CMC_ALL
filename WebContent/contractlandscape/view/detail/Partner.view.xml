<core:View controllerName="dia.cmc.contractlandscape.view.detail.Partner"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" 
	xmlns:html="http://www.w3.org/1999/xhtml">

	<FacetFilter
     id="idPartnerFacetFilter"
     type="Simple"
     showPersonalization="true"
     showReset="true"
     reset="handleFacetFilterReset">
     
     <lists>
       <FacetFilterList
         title="Partner Function"
         key="PartnerFunctionDesc"	
         multiselect="true"
         listClose="handleFacetFilterListClose"
         items="{DealDetailModel>/PartnerFunctionDescCollection}" >
         <items>
           <FacetFilterItem
             text="{DealDetailModel>PartnerFunctionDesc}"
             key="{DealDetailModel>PartnerFunctionDesc}"
             count="{data}" />
         </items>
       </FacetFilterList>
       
       <FacetFilterList
         title="Partner Name"
         key="PartnerName"
         multiselect="true"
         listClose="handleListClose"
         items="{DealDetailModel>/PartnerNameCollection}" >
         <items>
           <FacetFilterItem
             text="{DealDetailModel>PartnerName}"
             key="{DealDetailModel>PartnerName}"
             count="{data}" />
         </items>
       </FacetFilterList>
       
     </lists>
   </FacetFilter>
      
	<!-- <html:a href="http://maps.google.com">Open Google Map</html:a> -->
	<List id="idPartnerList" items="{DealDetailModel>/PartnerCollection}" >
		<CustomListItem type="Inactive">
			<l:form.SimpleForm id="PartnerDetails" maxContainerCols="2" layout="ResponsiveGridLayout">
				
				<Label text="Name" />
				
				<HBox fitContainer="true" alignItems="Start"
					justifyContent="SpaceBetween">
					
					<HBox fitContainer="true" alignItems="Start">
					
						<core:Icon src="sap-icon://customer-and-contacts"
							size="0.5rem" width="1.5rem" />
					
							
						<Text text="{DealDetailModel>PartnerName}" align="Right"/>
						
					</HBox>
		
						<Text text="{DealDetailModel>PartnerFunctionDesc}" />
						
				</HBox>
				
						
				<Label text="Address" />
				
				<HBox fitContainer="true" alignItems="Start"
					justifyContent="SpaceBetween">
					
					<HBox fitContainer="true" alignItems="Start">
						<core:Icon src="sap-icon://addresses" size="0.5rem"
							width="1.5rem" />
						<Link
							text="{DealDetailModel>PartnerStreet1}, {DealDetailModel>PartnerCity}, {DealDetailModel>Country} - {DealDetailModel>PartnerZip}"
							wrapping="true" press="handlePartnerAddressPress"/>
					</HBox>
					
						<Text text="{DealDetailModel>PartnerNumber}" class="sapUiHideOnPhone" />
				</HBox>
				
				<Label text="Phone" />
				<HBox fitContainer="true" alignItems="Start">
					<core:Icon src="sap-icon://phone" size="0.5rem"
						width="1.5rem" />
					<Link id="idPartnerPhone" text="{DealDetailModel>PartnerPhone}" press="handlePartnerNumber" />
				</HBox>
				<Label text="E-Mail" />
				<HBox fitContainer="true" alignItems="Start">
					<core:Icon src="sap-icon://email" size="0.5rem"
						width="1.5rem" />
					<Link id="idPartnerEmail" text="{DealDetailModel>PartnerEmail}" align="Right" press="handlePartnerEmail" />
				</HBox>
			</l:form.SimpleForm>
		</CustomListItem>
	</List>
					
</core:View>