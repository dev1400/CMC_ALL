<core:View controllerName="dia.cmc.contractlandscape.view.detail.Commitment"
	xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml">

	<Table id="idCommitmentTable"
		items="{  path: 'DealDetailModel>/CommitmentCollection',
														      sorter: {
														        path: 'DealDetailModel>PartnerName',
														        descending: false,
														        group: true
														      }
														}">

		<columns>

			<Column mergeDuplicates="true" hAlign="Center">
				<header>
					<Label text="Product" />
				</header>
			</Column>

			<Column hAlign="Center">
				<header>
					<Label text="Quantity" />
				</header>
			</Column>

			<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
				<header>
					<Label text="Validity Period" />
				</header>
			</Column>

			<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Right"
				width="3em">
				<header>
					<Label text="Action" />
				</header>
			</Column>
		</columns>


		<ColumnListItem>

			<ObjectIdentifier title="{DealDetailModel>MaterialDescription}"
				text="{DealDetailModel>Material}" class="sapMTableContentMargin" />

			<ObjectIdentifier title="{DealDetailModel>Quantity} {DealDetailModel>Uom}"
				class="sapMTableContentMargin" />

			<Text
				text="{
											path: 'DealDetailModel>ValidFrom',
											formatter: 'dia.cmc.common.util.Formatter.date'
										} 
										To 
										{
											path: 'DealDetailModel>ValidTo',
											formatter: 'dia.cmc.common.util.Formatter.date'
										} " />

			<Button id="idChangeCommitment" icon="sap-icon://edit"
				press="handleAmendCommitmentPopup" />

		</ColumnListItem>

	</Table>

</core:View>